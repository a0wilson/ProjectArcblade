@model ProjectArcBlade.Models.MatchViewModels.CreateStep1ViewModel
@{
    ViewData["Title"] = "Create Match - Step 1 of 3";
}

<h2>Create Match - Step 1 of 3</h2>

<form asp-action="CreateStep1">
    <div class="form-horizontal">
        <h4>Match</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="DivisionId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="DivisionId" asp-items="Model.Divisions" class="form-control"></select>
                <span asp-validation-for="DivisionId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SeasonId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SeasonId" asp-items="Model.Seasons" class="form-control"></select>
                <span asp-validation-for="SeasonId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="IsCupMatch" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IsCupMatch" class="form-control"/>
                <span asp-validation-for="IsCupMatch" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>

        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
