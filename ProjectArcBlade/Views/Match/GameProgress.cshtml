@model ProjectArcBlade.Models.MatchViewModels.GameProgressViewModel
@{
    ViewData["Title"] = "Game Progress";
}
<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a asp-action="Dashboard" asp-controller="Team" asp-route-id="@Model.TeamId">Team Dashboard - @Model.TeamName</a></li>
            <li><a asp-action="MatchProgress" asp-controller="Match" asp-route-matchId="@Model.MatchId" asp-route-teamId="@Model.TeamId">Match Progress</a></li>
            <li>Game Progress</li>
        </ol>
    </div>
</div>

<form asp-action="GameProgress">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>Game Progress</h1>
        </div>
        <div class="panel-body">
            @Html.Partial("SuccessAlertPartial")
            <h2><strong>Home Team:</strong> @Model.HomeTeamName - @Model.HomeGroup Pair</h2>
            <hr />
            <h2><strong>Away Team:</strong> @Model.AwayTeamName - @Model.AwayGroup Pair</h2>
            <hr />
            <table class="table table-condensed table-hover">
                <thead>
                    <tr class="lead">
                        <td class="text-center"><strong>Game #</strong></td>
                        <td><strong>Home Score</strong></td>
                        <td><strong>Away Score</strong></td>
                    </tr>
                </thead>
                <tbody>
                    @for (var index = 0; index < Model.GameTotal; index++)
                    {
                        <tr class="lead">
                            <td class="text-center">
                                <div class="form-control-static">
                                    @Model.GameNumber[index]
                                </div>
                                
                                <input type="hidden" asp-for="@Model.GameId[index]" />
                            </td>
                            <td>
                                <table>
                                    <tr>
                                        <td>
                                            <div class="form-group-lg">
                                                @if (Model.HomeHomeSoreStatus[index] == "Contested" || Model.AwayHomeSoreStatus[index] == "Contested")
                                                {
                                                    <div class="has-warning has-feedback">
                                                        @if (Model.IsHomeTeam)
                                                        {
                                                            <input class="form-control" asp-for="HomeHomeSore[index]" />
                                                        }
                                                        else
                                                        {
                                                            <input class="form-control" asp-for="AwayHomeSore[index]" />
                                                        }
                                                        <span class="glyphicon glyphicon-exclamation-sign form-control-feedback" aria-hidden="true"></span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    @if (Model.IsHomeTeam)
                                                    {
                                                        <input class="form-control" asp-for="HomeHomeSore[index]" />
                                                    }
                                                    else
                                                    {
                                                        <input class="form-control" asp-for="AwayHomeSore[index]" />
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @if (Model.IsHomeTeam)
                                            {
                                                if (Model.AwayHomeSore[index] == null)
                                                {
                                                    <h4><small><em>Opposition has not yet submitted a score for this game</em></small></h4>
                                                }
                                                else
                                                {
                                                    <h4><small><em>Opposition submitted: @Model.AwayHomeSore[index]</em></small></h4>
                                                }
                                            }
                                            else
                                            {
                                                if (Model.HomeHomeSore[index] == null)
                                                {
                                                    <h4><small><em>Opposition has not yet submitted a score for this game</em></small></h4>
                                                }
                                                else
                                                {
                                                    <h4><small><em>Opposition submitted: @Model.HomeHomeSore[index]</em></small></h4>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </table>                                                                
                            </td>
                            <td>
                                <table>
                                    <tr>
                                        <td>
                                            <div class="form-group-lg">
                                                
                                                @if (Model.HomeAwaySoreStatus[index] == "Contested" || Model.AwayAwaySoreStatus[index] == "Contested")
                                                {
                                                    <div class="has-warning has-feedback">
                                                        @if (Model.IsHomeTeam)
                                                        {
                                                            <input class="form-control" asp-for="HomeAwaySore[index]" />
                                                        }
                                                        else
                                                        {
                                                            <input class="form-control" asp-for="AwayAwaySore[index]" />
                                                        }
                                                        <span class="glyphicon glyphicon-exclamation-sign form-control-feedback" aria-hidden="true"></span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    @if (Model.IsHomeTeam)
                                                    {
                                                        <input class="form-control" asp-for="HomeAwaySore[index]" />
                                                    }
                                                    else
                                                    {
                                                        <input class="form-control" asp-for="AwayAwaySore[index]" />
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @if (Model.IsHomeTeam)
                                            {
                                                if (Model.AwayAwaySore[index] == null)
                                                {
                                                    <h4><small><em>Opposition has not yet submitted a score for this game</em></small></h4>
                                                }
                                                else
                                                {
                                                    <h4><small><em>Opposition submitted: @Model.AwayAwaySore[index]</em></small></h4>
                                                }
                                            }
                                            else
                                            {
                                                if (Model.HomeAwaySore[index] == null)
                                                {
                                                    <h4><small><em>Opposition has not yet submitted a score for this game</em></small></h4>
                                                }
                                                else
                                                {
                                                    <h4><small><em>Opposition submitted: @Model.HomeAwaySore[index]</em></small></h4>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer text-center">
            <button type="submit" name="btnBack" class="btn btn-lg" title="Back" value="Back">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
            </button>
            <button type="button" name="btnConfirmConcede" class="btn btn-lg btn-danger" title="Concede" data-toggle="modal" data-target="#myModal">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Concede
            </button>
            <button type="submit" name="btnSave" class="btn btn-lg btn-primary" title="Save" value="Save">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Save
            </button>
            <input type="hidden" asp-for="@Model.IsHomeTeam" />
            <input type="hidden" asp-for="@Model.MatchId" />
            <input type="hidden" asp-for="@Model.CategoryId" />
            <input type="hidden" asp-for="@Model.SeasonId" />
            <input type="hidden" asp-for="@Model.TeamId" />
            <input type="hidden" asp-for="@Model.SetId" />
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel"><strong>Concede Game Confirmation</strong></h4>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to concede this game? This action cannot be undone!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" name="btnConcede" class="btn btn-danger" title="Concede" value="Conncede">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Concede
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

