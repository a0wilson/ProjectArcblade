@model IEnumerable<ProjectArcBlade.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Status
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.LeagueClub.Club.Name - @item.Name
            </td>
            <td>
                @item.TeamStatus.Name
            </td>
            <td>
                <a asp-action="Dashboard" asp-route-id="@item.Id">Dashboard</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" asp-route-filterAvailablePlayers=true>Details</a> |
                <a asp-action="ManageNominations" asp-route-id="@item.Id">Manage Nominations</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
