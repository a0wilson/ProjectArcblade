@model ProjectArcBlade.Models.TeamViewModels.TeamDashboardViewModel
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>In Progress Matches</h2>
    </div>
    <div class="panel-body">
        @if (Model.InProgressMatches.Count() != 0)
        {
            <table class="table table-hover table-condensed table-responsive lead">
                <thead>
                    <tr>
                        <th>Opponent</th>
                        <th>Venue</th>
                        <th>Match Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.InProgressMatches)
                    {
                        <tr>
                            <td>
                                <a title="Update" asp-action="MatchProgress" asp-controller="Match" asp-route-matchId="@item.MatchId" asp-route-teamId="@Model.TeamId">
                                    @item.Opponent
                                </a>
                            </td>
                            <td>
                                @item.VenueName
                                @if (item.IsHomeTeam)
                                {
                                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                                }
                            </td>
                            <td>@item.StartDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>There are no matches in progress</div>
        }
    </div>
</div>
