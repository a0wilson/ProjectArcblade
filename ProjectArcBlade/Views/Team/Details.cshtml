@model ProjectArcBlade.Models.TeamViewModels.ManageTeamPlayersViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

@if(TempData["errorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @TempData["errorMessage"]
    </div>
}

<form asp-action="Details">
    <div class="form-horizontal">
        <h4>Team</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TeamId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TeamId" asp-items="Model.Teams" class="form-control"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TeamStatus" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Model.TeamStatus.Name
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GroupId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="GroupId" asp-items="Model.Groups" class="form-control"></select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AvailableTeamPlayerIds" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AvailableTeamPlayerIds" asp-items="Model.AvailableTeamPlayers" class="form-control"></select>
                <span asp-validation-for="AvailableTeamPlayerIds" class="text-danger"></span>                
            </div>            
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" asp-action="AssignToTeam" value="Assign" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AssignedTeamPlayerIds" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AssignedTeamPlayerIds" asp-items="Model.AssignedTeamPlayers" class="form-control"></select>
                <span asp-validation-for="AssignedTeamPlayerIds" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" asp-action="ReassignFromTeam"  value="Reassign" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TeamId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
